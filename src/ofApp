#include "ofApp.h"

void ofApp::setup(){
	ofSetLogLevel(OF_LOG_VERBOSE);
    ofSetVerticalSync(false);
	ofEnableAlphaBlending();
    _shader.setGeometryInputType(GL_POINTS);
	_shader.setGeometryOutputType(GL_POINTS);
	_shader.setGeometryOutputCount(1024);
	_shader.load("shader/vert.glsl", "shader/frag.glsl", "shader/geom.glsl");
}

void ofApp::update(){

}

void ofApp::draw() {
    ofBackgroundGradient(ofColor(10, 10, 10), ofColor(20, 20,20 ));
    ofSetColor(255);
    _shader.begin();
    _shader.setUniform1i("g_Detail", 60);
    ofLine(ofVec3f(-1, 0, 0), ofVec3f(1, 0, 0));
    ofLine(ofVec3f(-0.5, -1, 0), ofVec3f(0.5, 1, 0));
    _shader.end();
}

void ofApp::keyPressed(int key){

}
